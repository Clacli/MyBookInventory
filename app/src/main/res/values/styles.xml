<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <!-- Style for Book Label in Add and Edit Activity -->
    <style name="BookLabelTextView">
        <item name="android:layout_marginBottom">@dimen/title_vertical_spacing</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/book_label</item>
    </style>

    <!-- Common Style for Book Label in Add and Edit Activity -->
    <style name="CommonBookLabelTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/title_vertical_spacing</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/book_label</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Style for Fab -->
    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_layout_margin</item>
        <item name="android:src">@drawable/ic_add</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

</resources>
