<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/root_view_padding"
    tools:context=".BookManagingActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/book_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/book_label_text_view_side_margin"
        android:layout_marginRight="@dimen/book_label_text_view_side_margin"
        android:layout_marginTop="@dimen/book_label_text_view_margin_top"
        android:text="@string/book_label"
        android:textSize="@dimen/book_label_text_size"
        app:layout_constraintEnd_toStartOf="@+id/fab2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_book_title"
        style="@style/EditTextStyle1"
        android:layout_marginTop="@dimen/title_edit_text_margin_top"
        android:hint="@string/title_hint"
        android:inputType="textCapWords"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_label" />

    <EditText
        android:id="@+id/edit_book_price"
        style="@style/EditTextStyle2"
        android:layout_marginLeft="@dimen/book_edit_text_margin"
        android:layout_marginStart="@dimen/book_edit_text_margin"
        android:layout_marginTop="@dimen/book_edit_text_margin"
        android:hint="@string/price_hint"
        android:inputType="numberDecimal"
        app:layout_constraintBaseline_toBaselineOf="@id/edit_book_quantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_book_title" />

    <TextView
        android:id="@+id/currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/currency_text_view_margin_bottom"
        android:text="@string/currency_symbol"
        android:textSize="@dimen/text_size"
        app:layout_constraintBaseline_toBaselineOf="@id/edit_book_quantity"
        app:layout_constraintBottom_toBottomOf="@+id/edit_book_price"
        app:layout_constraintStart_toEndOf="@+id/edit_book_price" />

    <EditText
        android:id="@+id/edit_book_quantity"
        style="@style/EditTextStyle2"
        android:layout_marginEnd="@dimen/quantity_edit_text_side_margin"
        android:layout_marginRight="@dimen/quantity_edit_text_side_margin"
        android:layout_marginTop="@dimen/quantity_edit_text_margin_top"
        android:hint="@string/quantity_hint"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_book_title" />

    <TextView
        android:id="@+id/out_of_print_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/out_of_print_margin_bottom"
        android:layout_marginEnd="@dimen/out_of_print_side_margin"
        android:layout_marginLeft="@dimen/out_of_print_side_margin"
        android:layout_marginRight="@dimen/out_of_print_side_margin"
        android:layout_marginStart="@dimen/out_of_print_side_margin"
        android:text="@string/out_of_print_label"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toBottomOf="@+id/out_of_print_spinner"
        app:layout_constraintEnd_toEndOf="@+id/book_label"
        app:layout_constraintStart_toEndOf="@+id/currency" />

    <!-- Out of print drop-down spinner -->
    <Spinner
        android:id="@+id/out_of_print_spinner"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/spinner_height"
        android:layout_marginBottom="@dimen/spinner_margin_bottom"
        android:layout_marginLeft="@dimen/spinner_side_margin"
        android:layout_marginStart="@dimen/spinner_side_margin"
        android:layout_marginTop="@dimen/spinner_margin_top"
        android:paddingEnd="@dimen/spinner_side_padding"
        android:paddingRight="@dimen/spinner_side_padding"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/edit_supplier_name"
        app:layout_constraintStart_toEndOf="@+id/out_of_print_label"
        app:layout_constraintTop_toTopOf="@+id/edit_book_quantity" />

    <TextView
        android:id="@+id/supplier_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/supplier_label_margin"
        android:layout_marginLeft="@dimen/supplier_label_margin"
        android:layout_marginStart="@dimen/supplier_label_margin"
        android:text="@string/supplier_label"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toTopOf="@+id/edit_supplier_name"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_supplier_name"
        style="@style/EditTextStyle1"
        android:layout_marginBottom="@dimen/supplier_name_edittext_margin_bottom"
        android:hint="@string/supplier_name_hint"
        android:inputType="textCapWords"
        app:layout_constraintBottom_toTopOf="@+id/edit_supplier_phone_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_supplier_phone_number"
        style="@style/EditTextStyle1"
        android:layout_marginBottom="@dimen/phone_number_edittext_margin_bottom"
        android:hint="@string/supplier_phone_number_hint"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        style="@style/FabStyle"
        app:layout_constraintBottom_toTopOf="@+id/edit_book_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"/>

</android.support.constraint.ConstraintLayout>